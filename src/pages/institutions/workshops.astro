---
import Layout from '../../components/Layout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import { withBase } from '../../utils/withBase';
import { contact, blog, resources } from '../../lib/routes';
---

<Layout title="Institutions: Workshops" description="Workshop cluster page for schools and districts.">
  <Breadcrumbs
    items={[
      { label: 'Home', href: '/' },
      { label: 'Institutions', href: '/institutions' },
      { label: 'Workshops' }
    ]}
  />
  <h1>Workshops</h1>
  <p class="measure">Explore workshop-oriented support focused on practical classroom implementation and program growth.</p>
  <section>
    <h2>Start here</h2>
    <ul>
      <li><a href={withBase(blog)}>Read teaching notes and facilitation insights</a></li>
      <li><a href={withBase(resources)}>Use workshop-adjacent resources</a></li>
      <li><a href={withBase('/institutions/curriculum-design')}>Pair workshops with curriculum planning</a></li>
    </ul>
  </section>
  <section>
    <h2>Future expansion</h2>
    <h3>Workshop formats</h3>
    <h3>Sample outcomes and follow-up cycles</h3>
  </section>
  <p><a class="button" href={withBase(contact)}>Book a workshop conversation</a></p>
</Layout>
