---
import { withBase } from '../utils/withBase';
import { home, teaching, learning, institutions, projects, resources, contact, rss, routeLabels } from '../lib/routes';

const teachingFocusAreas = [
  'Web development foundations',
  'AP CSP + AP CSA support',
  'Project-based learning pathways'
];

const featuredNow =
  'Now: Building short, classroom-ready coding labs that blend JavaScript fundamentals with creative projects.';
---

<footer class="site-footer">
  <div class="container footer-grid">
    <div class="footer-column">
      <h2 class="footer-heading">Quick links</h2>
      <ul>
        <li><a href={withBase(home)}>{routeLabels.home}</a></li>
        <li><a href={withBase(teaching)}>{routeLabels.teaching}</a></li>
        <li><a href={withBase(learning)}>{routeLabels.learning}</a></li>
        <li><a href={withBase(institutions)}>{routeLabels.institutions}</a></li>
      </ul>
    </div>

    <div class="footer-column">
      <h2 class="footer-heading">Teaching focus areas</h2>
      <ul>
        {teachingFocusAreas.map((area) => <li>{area}</li>)}
      </ul>
    </div>

    <div class="footer-column">
      <h2 class="footer-heading">More</h2>
      <ul>
        <li><a href={withBase(projects)}>{routeLabels.projects}</a></li>
        <li><a href={withBase(resources)}>{routeLabels.resources}</a></li>
        <li><a href={withBase(contact)}>{routeLabels.contact}</a></li>
        <li><a href={withBase(rss)}>{routeLabels.rss}</a></li>
        <li><a href={withBase('/sitemap-index.xml')}>Sitemap</a></li>
      </ul>
    </div>
  </div>

  <div class="container footer-bottom">
    <p class="footer-now"><strong>Featured now:</strong> {featuredNow}</p>
    <p>Â© {new Date().getFullYear()} CS Educator. Built with Astro.</p>
  </div>
</footer>
